<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.OoushFitness" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/ooush_primary</item>
        <item name="colorPrimaryVariant">@color/ooush_primary_hover</item>
        <item name="colorOnPrimary">@color/ooush_highlight_text</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        
        <item name="android:fontFamily">@font/archivo_narrow</item>
    </style>
    <style name="Theme.OoushFitness.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        
        <item name="colorPrimary">@color/ooush_primary</item>
        <item name="colorPrimaryVariant">@color/ooush_primary_hover</item>
        <item name="colorOnPrimary">@color/ooush_highlight_text</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        
        <item name="android:fontFamily">@font/archivo_narrow</item>
    </style>
    <style name="Theme.OoushFitness.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.OoushFitness.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        
        <item name="colorPrimary">@color/ooush_primary</item>
        <item name="colorPrimaryVariant">@color/ooush_primary_hover</item>
        <item name="colorOnPrimary">@color/ooush_highlight_text</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        
        <item name="android:fontFamily">@font/archivo_narrow</item>
    </style>
</resources>